
<%= form_for @stock do |b| %>
<% if @stock.errors.any? %>
<div class= "errors" style= "color: red;">
<h3>These errors prohibited the form being saved: </h3>
<ul>
<% @stock.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
</div>
<% end %>

<div class="form-group">
<%= b.label :BloodBank %>
<%= b.collection_select :blood_bank_id, BloodBank.where('user_id=?', current_user.id), :id, :name, {prompt: "Select BloodBank"},{class: "form-control"} %>
</div>

<div class="form-group">
<%= b.label :blood_group_id %>
<%= b.collection_select :blood_group_id, BloodGroup.all, :id, :name, {prompt: "Select Blood group"},{class: "form-control"} %>
</div>

<div class="form-group">
<%= b.label :component_type_id %>
<%= b.collection_select :component_type_id, ComponentType.all, :id, :name, {prompt: "Select a component"},{class: "form-control"} %>
</div>


<div class="form-group">
<%= b.label :units %>
<%= b.number_field :units, class: "form-control" %>
</div>

<%= b.submit %>

<% end %>
