
<div class="row">
  <div class="col-md-7">
    <div class="pageheader">
      <h2><%= @state.name.capitalize %></h2><br/><br/>
    </div>
    <% @state.blood_banks.each do |bloodbank| %>
    <ol>
    <li><b> BloodBanks Name </b> : <%= bloodbank.name %><br/></li>
    <li><b> BloodBank Address </b> : <%= bloodbank.address %><br/></li>
    <li><b> District </b> : <%= bloodbank.district.name %><br/></li>
    <li><b> State </b> : <%= bloodbank.locality.name %><br/></li>
    <li><b> Email </b> : <%= bloodbank.email %><br/></li>
    <li><b> Mobile </b> : <%= bloodbank.mobile %><br/></li>
    <li><b> Landline Number </b> : <%= bloodbank.landline_number %><br/></li>
    <li><b> Manager </b> : <%= bloodbank.manager %><br/></li>
    <li><b> Stock </b></li> :
    </ol>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>BloodGroup</th>
          <th>Component Type</th>
          <th>Total Stock</th>
        </tr>
      </thead>
      <tbody>
      <% count = 1 %>
      <% bloodbank.blood_availabilities.each do |presentstock| %>
        <tr>
          <td><%= presentstock.blood_group.name %></td>
          <td><%= presentstock.component_type.name %></td>
          <td><%= presentstock.total_stocks %></td>
        </tr>
        <% count += 1 %>
        <% end %>
        <% end %>
      </tbody>
    </table>
    
  </div>


    



   <div class="col-md-5">
          <div class="pageheader">
              <h2>BloodBank Image</h2>
          </div>
                  <% @state.blood_banks.each do |bloodbank| %>
                     <%= image_tag(bloodbank.cover.url) if bloodbank.cover %><br/><br/>
                  <% end %>
            
    </div>
</div>








